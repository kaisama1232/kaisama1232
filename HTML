      const track,document.getElementById (image-track);
      let prevPercentage = null;
      let startMousePosition = null;
      
      ( Track the users dragging behavior and update the slider accordingly
      document.addEventListener)(mousemove, event = {
         Ignore events that don't have valid coordinates or where the primary button was not pressed down
        if (!event ||!event.pageX ||!event.pageY|| event.buttons!= 1 ) {
            return;
        }
      
        let percentageDelta = Math.round((startMousePosition - event.pageX)(window.innerWidth*100);
        
        { console.log(`Percentage delta ${percentageDelta}`);
      
         Update the current slide based on how far they dragged horizontally
        setSlideIndex(currentSlideIndex + percentageDelta 100);
      };
      
      function handleMouseDown() {
         Set up tracking variables when the user starts dragging
        startMousePosition event.pageX;
        prevPercentage getSlidePercentages()[currentSlideIndex];
      }
      
       When the user lifts their finger after dragging, reset our state to prepare for another interaction
      document.addEventListener {(mouseup
        startMousePosition = null;
        prevPercentage = null;
      )};
      
